<resources>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/brand</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/brand</item>
        <item name="android:navigationBarColor">@color/brand</item>
        <item name="android:windowBackground">@drawable/app_screen</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/brand</item>
    </style>

    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="android:statusBarColor">@color/brand</item>
        <item name="android:windowBackground">@drawable/app_screen</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
    </style>
</resources>
